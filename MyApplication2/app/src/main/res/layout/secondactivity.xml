    <View
        android:layout_width="80dp"
        android:layout_height="25dp"
></View>
    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom"
        android:background="@drawable/favpng_app_icon_download_icon_essential_icon"
        android:contentDescription="Button"></Button>

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom"

        android:contentDescription="OtroButton"
        android:background="@drawable/nicepng_heartbeat_png_231720"></Button>

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom"

        android:background="@drawable/_citypng_com_hd_bookmark_white_icon_symbol_transparent_png___512x512"

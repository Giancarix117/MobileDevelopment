        android:layout_width="75dp"
        android:layout_height="75dp"

        app:shapeAppearance="@style/ShapeAppearanceOverlay.Picture"
        android:src="@drawable/chonk"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
